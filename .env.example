# Frontend
VITE_API_URL=http://localhost:4000/api/v1
VITE_DEMO_MODE=false

# Backend
PORT=4000
NODE_ENV=development
ALLOWED_ORIGIN=http://localhost:8080

# Optional: Bundle analysis
ANALYZE=false

# Optional: Playwright base URL for e2e tests
PLAYWRIGHT_BASE_URL=http://localhost:8080

# Security
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=zilliance-api
AUTH_SESSION_SECRET=replace-with-strong-session-secret
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_DOMAIN=localhost
SESSION_TIMEOUT=86400000

# Database
MONGODB_URI=mongodb://localhost:27017/zilliance
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email/SMS
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Rate limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Seed
SEED_OWNER_EMAIL=owner@zilliance.com
SEED_OWNER_PASSWORD=ChangeMe!234

