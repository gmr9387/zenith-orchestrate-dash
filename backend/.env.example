# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/zilliance
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/zilliance

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=zilliance-api

# Authentication
AUTH_SESSION_SECRET=your-session-secret-key
AUTH_COOKIE_SECRET=your-cookie-secret-key
AUTH_COOKIE_DOMAIN=localhost
AUTH_COOKIE_SECURE=false

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@zilliance.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Storage Configuration
STORAGE_PROVIDER=s3
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_BUCKET=zilliance-storage
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY_ID=your-access-key
STORAGE_SECRET_ACCESS_KEY=your-secret-key

# Alternative Storage Providers
# DigitalOcean Spaces
# STORAGE_ENDPOINT=https://nyc3.digitaloceanspaces.com
# STORAGE_REGION=nyc3

# Cloudflare R2
# STORAGE_ENDPOINT=https://pub-1234567890.r2.dev
# STORAGE_REGION=auto

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,text/*
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600000

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
AZURE_COGNITIVE_KEY=your-azure-cognitive-key

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true